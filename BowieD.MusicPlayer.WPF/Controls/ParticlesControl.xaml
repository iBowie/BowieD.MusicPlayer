<UserControl x:Class="BowieD.MusicPlayer.WPF.Controls.ParticlesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BowieD.MusicPlayer.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas x:Name="mainParticleCanvas">
        <Canvas.Effect>
            <BlurEffect Radius="4" KernelType="Gaussian" RenderingBias="Performance"/>
        </Canvas.Effect>
    </Canvas>
</UserControl>
