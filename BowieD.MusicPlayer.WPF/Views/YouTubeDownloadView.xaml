<mah:MetroWindow x:Class="BowieD.MusicPlayer.WPF.Views.YouTubeDownloadView"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowieD.MusicPlayer.WPF.Views"
        mc:Ignorable="d" Background="{DynamicResource MahApps.Brushes.Window.Background}"
        Title="YouTubeDownloadView" Height="200" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" d:Text="Downloading..."
                   FontSize="18" Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                   Name="statusText"/>
        <ProgressBar Grid.Row="1" Margin="5" Name="progBar" Maximum="100"
                     MinHeight="16"/>
    </Grid>
</mah:MetroWindow>
